<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ThirdFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="243dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/chungkingexpress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginStart="175dp"
                android:textSize="20sp"
                android:text="@string/movRom1title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="80dp"
                android:text="@string/movRom1info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="120dp"
                android:lineSpacingExtra="@dimen/line_spacing"
                android:text="@string/movRom1syn" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="530dp"
                app:dividerColor="@android:color/darker_gray"/>

            <ImageView
                android:layout_width="170dp"
                android:layout_height="243dp"
                android:layout_marginTop="560dp"
                android:src="@drawable/scottvsworld"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="555dp"
                android:layout_marginStart="175dp"
                android:textSize="20sp"
                android:text="@string/movRom2title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="615dp"
                android:layout_marginStart="175dp"
                android:text="@string/movRom2info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="650dp"
                android:textSize="15sp"
                android:text="@string/movRom2syn"/>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>